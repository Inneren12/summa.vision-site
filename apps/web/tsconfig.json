{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2023",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@deck.gl/core": [
        "lib/viz/stubs/deckgl-core"
      ],
      "@deck.gl/mapbox": [
        "lib/viz/stubs/deckgl-mapbox"
      ],
      "@root/*": [
        "../../*"
      ],
      "maplibre-gl": [
        "lib/viz/stubs/maplibre-gl"
      ],
      /* Stubs live under explicit aliases — tests/санити могут их использовать при желании */
      "@viz/stubs/echarts": [
        "lib/viz/stubs/echarts"
      ],
      "@viz/stubs/vega-embed": [
        "lib/viz/stubs/vega-embed"
      ]
    },
    "jsx": "preserve",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "types": [
      "vitest",
      "vitest/importMeta",
      "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app",
    "components",
    "lib",
    "types/**/*.d.ts",
    "*.ts",
    "*.tsx",
    "*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "tests",
    "**/*.test.*",
    "**/*.spec.*",
    "vitest.config.*",
    "playwright.config.*",
    "vitest.workspace.ts",
    "vitest.config.ts"
  ]
}
