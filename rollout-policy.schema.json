{
  "$ref": "#/definitions/RolloutPolicy",
  "definitions": {
    "RolloutPolicy": {
      "type": "object",
      "properties": {
        "host": {
          "type": "string",
          "minLength": 1,
          "default": "http://localhost:3000"
        },
        "flag": {
          "type": "string",
          "minLength": 1,
          "description": "Flag key to rollout"
        },
        "ns": {
          "type": "string",
          "minLength": 1,
          "description": "Namespace for rollout analytics"
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          },
          "minItems": 1
        },
        "stop": {
          "type": "object",
          "properties": {
            "maxErrorRate": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "maxCLS": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "maxINP": {
              "type": "number",
              "minimum": 0,
              "maximum": 10000
            }
          },
          "additionalProperties": false
        },
        "minSamples": {
          "type": "integer",
          "minimum": 0
        },
        "coolDownMs": {
          "type": "integer",
          "minimum": 0
        },
        "hysteresis": {
          "type": "object",
          "properties": {
            "errorRate": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "CLS": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "cls": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "INP": {
              "type": "number",
              "minimum": 0,
              "maximum": 10000
            },
            "inp": {
              "type": "number",
              "minimum": 0,
              "maximum": 10000
            }
          },
          "additionalProperties": false
        },
        "token": {
          "type": "string",
          "minLength": 1
        },
        "shadow": {
          "type": "boolean"
        },
        "canary": {
          "type": "object",
          "properties": {
            "ttlHours": {
              "type": "integer",
              "minimum": 1,
              "maximum": 168
            },
            "cohort": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "userId": {
                    "type": "string",
                    "minLength": 1,
                    "description": "User identifier to enroll in canary"
                  },
                  "ff_aid": {
                    "type": "string",
                    "minLength": 1,
                    "description": "ff_aid cookie value to enroll in canary"
                  }
                },
                "additionalProperties": false
              },
              "minItems": 1
            }
          },
          "required": [
            "ttlHours",
            "cohort"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "flag",
        "steps"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
