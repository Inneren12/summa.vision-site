{
  "name": "summa-vision-brand",
  "version": "0.1.0",
  "private": true,
  "engines": { "node": ">=20 <21" },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run web:dev",
    "build": "npm run web:build",
    "start": "npm run web:start",
    "env:check": "node scripts/env-check.mjs",
    "build:tokens": "tsx scripts/build-tokens.ts",
    "copy:tokens": "node ./scripts/copy-tokens.cjs",
    "check:viz-css": "node ./scripts/check-viz-css-imports.mjs",
    "web:dev": "npm run build:tokens && npm run copy:tokens && npm --workspace apps/web run dev",
    "web:build": "npm run build:tokens && npm run copy:tokens && npm --workspace apps/web run build && npm run copy:standalone",
    "copy:standalone": "node ./scripts/copy-standalone-assets.cjs",
    "web:start": "npm --workspace apps/web run start",
    "web:start:ci": "PORT=3000 node apps/web/.next/standalone/server.js",
    "web:test": "npm run copy:tokens && npm --workspace apps/web run test",
    "web:viz:check": "npm --workspace apps/web run viz:check",
    "web:viz:size": "npm --workspace apps/web run viz:size",
    "typecheck": "npm --workspace apps/web run typecheck",
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs,.mjs",
    "lint:ff": "eslint --config .eslintrc.ff.cjs --ext .ts,.tsx app components lib/ff",
    "lint:staged": "lint-staged",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "commitlint": "node scripts/commitlint-run.mjs",
    "test:ci": "npm run web:test:cov",
    "test": "npm run web:test:quick",
    "web:test:cov": "npm run copy:tokens && npm --workspace apps/web run test:cov",
    "web:test:quick": "npm run copy:tokens && npm --workspace apps/web run test:quick",
    "ff:codegen": "node ./scripts/ff-codegen.mjs",
    "ff:types": "node ./scripts/ff-generate-types.mjs",
    "ff:docs:check": "node ./scripts/ff-docs-verify.mjs",
    "ff:doctor": "npm run ff:codegen && node ./scripts/ff-doctor.mjs || exit 0",
    "ff:doctor:strict": "npm run ff:codegen && node ./scripts/ff-doctor.mjs",
    "ff:snapshot": "node ./scripts/ff-snapshot.mjs",
    "ff:snapshot:export": "node ./scripts/ff-snapshot.mjs export ./.runtime/flags.snapshot.json",
    "ff:snapshot:restore": "node ./scripts/ff-snapshot.mjs restore ./.runtime/flags.snapshot.json",
    "ff:reload": "node ./scripts/ff-reload.mjs",
    "ff:validate": "tsx scripts/ff-validate-config.mjs",
    "ff:store:migrate": "tsx scripts/ff-store-migrate.ts",
    "lint:no-raw-colors": "node scripts/check-no-raw-colors.mjs",
    "lint:a11y": "eslint --no-eslintrc --config .eslintrc.a11y.cjs --max-warnings=0 --ext .ts,.tsx app apps/web/app apps/web/components components lib src",
    "test:axe": "tsx scripts/og-axe-check.ts",
    "a11y:e2e": "playwright test e2e/a11y-pages.spec.ts",
    "ci:check": "npm run typecheck && npm run lint && npm run lint:no-raw-colors && npm run test:ci && npm run ff:validate && npm run check:viz-css && npm run web:build",
    "analyze:knip:ci": "npx -y knip@5.66.2 --reporter github-actions --config knip.jsonc",
    "analyze:cycles": "node scripts/run-madge.mjs",
    "quality:check": "npm run analyze:knip:ci && npm run analyze:cycles",
    "pree2e": "npm run web:build",
    "e2e": "npx -y @playwright/test@1.48.0 test",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build -o .out-sb",
    "prepare": "husky install",
    "postinstall": "npm run ff:codegen && npm run ff:types && node scripts/patch-next.cjs",
    "perf:lhci": "npx -y @lhci/cli@0.12.0 autorun --config=.lighthouserc.cjs",
    "perf:check": "npm run web:build && npm run perf:lhci",
    "visual:browsers": "playwright install --with-deps chromium",
    "test:visual": "playwright test -c playwright.visual.config.ts",
    "test:visual:update": "playwright test -c playwright.visual.config.ts --update-snapshots",
    "test:unit": "vitest run --reporter=basic",
    "test:unit:watch": "vitest",
    "test:e2e:flags": "playwright test --config=playwright.flags.config.ts",
    "test:e2e:stories": "playwright test e2e/stories.e2e.spec.ts",
    "prebuild": "npm run ff:codegen && npm run ff:types",
    "postbuild": "npm run ff:types",
    "pretest": "npm run ff:types",
    "pretest:ci": "npm run ff:types",
    "ff:doctor:json": "node ./scripts/ff-doctor.mjs --json",
    "policy:validate": "tsx scripts/policy-validate.ts",
    "policy:schema:export": "tsx scripts/policy-schema-export.ts",
    "stories:validate": "node scripts/stories-validate.mjs"
  },
  "dependencies": {
    "@types/jszip": "^3.4.0",
    "ioredis": "^4.28.5",
    "ulid": "^3.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "1.48.0",
    "@storybook/addon-a11y": "^8.1.0",
    "@storybook/addon-essentials": "^8.1.0",
    "@storybook/nextjs": "^8.1.0",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "axe-core": "^4.8.2",
    "chalk": "^4.1.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-ff-safe": "file:tools/eslint-plugin-ff-safe",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-unused-imports": "^3.2.0",
    "gray-matter": "^4.0.3",
    "glob": "^10.4.5",
    "husky": "^9.1.6",
    "ioredis-mock": "^6.0.5",
    "jest-axe": "^9.0.0",
    "lint-staged": "^15.2.7",
    "msw": "^2.11.6",
    "playwright": "1.48.0",
    "prettier": "^3.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "server-only": "^0.0.1",
    "storybook": "^8.1.0",
    "style-dictionary": "^3.9.1",
    "ts-morph": "^27.0.2",
    "tsx": "^4.8.1",
    "typescript": "5.5.4",
    "vitest": "^2.0.5",
    "yaml": "^2.8.1",
    "zod-to-json-schema": "^3.23.5"
  },
  "overrides": {
    "d3-array": "^3.2.4",
    "d3-scale": "^4.0.2",
    "next": "14.2.8"
  }
}
