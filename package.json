{
  "name": "summa-vision-brand",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build:tokens": "tsx scripts/build-tokens.ts",
    "copy:tokens": "node ./scripts/copy-tokens.cjs",
    "web:dev": "npm run build:tokens && npm run copy:tokens && npm --workspace apps/web run dev",
    "web:build": "npm run build:tokens && npm run copy:tokens && npm --workspace apps/web run build",
    "web:start": "npm --workspace apps/web run start",
    "web:test": "npm run copy:tokens && npm --workspace apps/web run test",
    "typecheck": "npm --workspace apps/web run typecheck",
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs,.mjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm run test:ci",
    "test:ci": "npm run copy:tokens && vitest run --coverage --config apps/web/vitest.config.ts",
    "lint:no-raw-colors": "node scripts/check-no-raw-colors.mjs",
    "test:axe": "tsx scripts/og-axe-check.ts",
    "ci:check": "npm run typecheck && npm run lint && npm run lint:no-raw-colors && npm run test:ci && npm run web:build",
    "ci:install": "npm install --no-audit --no-fund",
    "perf:analyze": "cross-env ANALYZE=true npm run web:build && node scripts/save-bundle-report.mjs",
    "perf:size": "size-limit",
    "perf:lhci": "lhci autorun --config=.lighthouserc.cjs || (echo 'LHCI warnings allowed initially' && exit 0)",
    "perf:check": "npm run web:build && npm run perf:size && npm run perf:lhci",
    "analyze:knip": "knip",
    "analyze:knip:ci": "knip --no-progress --reporter compact",
    "analyze:cycles": "madge apps/web --circular --config madge.config.mjs",
    "quality:check": "npm run analyze:knip:ci && npm run analyze:cycles",
    "deps:outdated": "npm outdated || true",
    "deps:audit": "npm audit --omit=dev --audit-level=high || (echo 'Audit found high; review required' && exit 1)",
    "pree2e": "npm run web:build",
    "e2e": "playwright test",
    "build": "npm run build:tokens",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build -o .out-sb",
    "prepare": "husky install",
    "postinstall": "node scripts/patch-next.cjs"
  },
  "size-limit": [
    {
      "name": "Client JS total",
      "path": "apps/web/.next/static/chunks/**/*.js",
      "limit": "180 KB"
    },
    {
      "name": "Client CSS total",
      "path": "apps/web/.next/static/css/*.css",
      "limit": "40 KB"
    }
  ],
  "devDependencies": {
    "@axe-core/playwright": "^4.8.3",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@lhci/cli": "^0.12.0",
    "@next/bundle-analyzer": "^14.2.0",
    "@playwright/test": "^1.41.2",
    "@size-limit/file": "^11.2.0",
    "@storybook/addon-a11y": "^8.1.0",
    "@storybook/addon-essentials": "^8.1.0",
    "@storybook/nextjs": "^8.1.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "chalk": "^4.1.2",
    "cross-env": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "axe-core": "^4.8.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.1.6",
    "knip": "^5.27.0",
    "lint-staged": "^15.2.7",
    "madge": "^6.1.0",
    "playwright": "^1.41.2",
    "prettier": "^3.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^11.2.0",
    "storybook": "^8.1.0",
    "style-dictionary": "^3.9.1",
    "tsx": "^4.8.1",
    "typescript": "5.5.4"
  }
}
